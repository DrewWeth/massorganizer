<p id="notice"><%= notice %></p>

<% if current_user and current_user.admin != 0 %>
<p>
  <strong>Tele:</strong>
  <%= @device.tele %>
</p>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @device.name.humanize %>
</p>

<p>
  <strong>Pawprint:</strong>
  <%= @device.pawprint || "Not available" %>
</p>
<hr>
<h4>Interests</h4>

<% if @interests.count == 0 %>
  No interests associated with this device
<% else %>

  <ul>
    <% @interests.each do |int| %>

  <li><%= link_to int.name, int %></li>
  </ul>
<% end %>

<% end %>
<br><br>
<% if current_user and current_user.admin != 0 %>

  <%= link_to 'Edit', edit_device_path(@device) if current_user and current_user.admin != 0 %>
<% end %>

<%= link_to 'Back', devices_path %>
