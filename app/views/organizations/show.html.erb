<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-sm-7">
    <% if current_user and current_user.id == @organization.owner_id %><%= link_to 'Edit', edit_organization_path(@organization) %><% end %>
    <%= link_to 'Back', organizations_path %>


    <h2><%= @organization.name %></h2>


    <p>
      <strong>Phone number:</strong>
      <%= @organization.phone_number || ENV["default_tele"] %>
    </p>

    <p>
      <strong>Owner:</strong>
      <%= @organization.user.email %>
    </p>


    <p>
      <strong>Desc:</strong>
      <%= @organization.desc || "No description" %>
    </p>
  </div>
  <div class="col-sm-5">
    <% if is_admin? or (current_user and @organization.owner_id == current_user.id) %>
      <h3>Created Interest</h3>
      <%= render :template => "interests/_form" %>
    <% end %>
  </div>
</div>


<hr>
<h3>Interests</h3>
<div class="row">
<% @interests.each_with_index do |interest, index| %>

  <div class="col-sm-2">
    <div class="id-box">
      <div class="number">
        <%= interest.id %>
      </div>
      <!-- <%= interest.id %> -->
      <div class="name">
      <%= link_to interest.name, interest %>
      </div>
      <div class="desc">
        <%= interest.desc %>
      </div>
    </div>
  </div>

  <% if (index+1) % 6 == 0 %>
    </div>
    <div class="row">
  <% end %>

<% end %>
</div>

<hr>

<% if int_mod? %>
<div class="row">
  <label class="badge"><%= @email_list.count %></label><br>
  <code>
  <%= @email_list.join(', ') %>
  </code>
</div>
<% end %>
