<h1>Listing organizations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Phone number</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= link_to organization.name, organization %></td>
        <td><%= organization.desc %></td>
        <td><%= organization.phone_number %></td>
        <td><%= organization.user.email %></td>
        <td><%= link_to 'Show', organization %></td>
        <% if current_user and current_user.id == organization.owner_id %>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Organization', new_organization_path %>

<h3>Your Organizations</h3>
<ul>
  <% if @owned.count == 0 %>
  You don't have any organizations
  <% else %>
<% @owned.each do |org| %>
  <li><%= link_to org.name, org %></li>
<% end %>
<% end %>
</ul>



<% if current_user and current_user.admin != 0 %>
<h3>Texting Service <button class="btn btn-primary pull-right" id="texting_service">Toggle</button></h3>
<div id="texting_service_div" style="display:none">
<%= form_tag({controller: "services", action: "text"}, method: "post", class: "") do %>
<%= label_tag(:q, "Content") %>
<%= text_field_tag :q, nil, :class=>"form-control" %>
<br>
<%= label_tag("Receivers") %>
<%= select_tag :receivers, options_for_select(@members_arr), :class=>"form-control" %>



<%= submit_tag "Search", :class => "form-control", :style=>"margin-top:20px", data: { confirm: "Are you sure?" } %>
<% end %>

</div>

<% end %>


<script type="text/javascript">
  $('#texting_service').click(function(){
    console.log("clicked");
    $('#texting_service_div').toggle();
  })

</script>
