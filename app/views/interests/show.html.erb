<p id="notice"><%= notice %></p>


<p>
  <h1><%= @interest.name %></h1>

</p>

<p>
  <strong>Email:</strong>
  <%= @interest.organization.user.email.humanize %>
</p>

<p>
  <strong>Organization:</strong>
  <%= link_to @interest.organization.name, @interest.organization %>
</p>

<p>
  <strong>Description:</strong>
  <%= @interest.desc %>
</p>


<%= link_to 'Edit', edit_interest_path(@interest) if current_user and current_user.id != 0 %>
<%= link_to 'Back', interests_path %>

<hr>

<h3>Member's Devices <label class="badge"><%= @devices.count %></label></h3>
<% if @devices.count == 0 %>
  No devices associated with this interest.
<% else %>
  <ul>
      <% @devices.each do |device| %>
        <li><%= link_to device.name, device %></li>
      <% end %>
  </ul>
<% end %>

<% if current_user and current_user.admin != 0 %>
<div>
  <hr>

    <h3>Mailing List</h3>
    <p>
      Mailing list for this interest
    </p>
      <code>
        <%= @devices.map{|a| a.email || a.pawprint + "@mail.missouri.edu"}.join(', ') %>
      </code>
    </p>
  </p>
</div>
<% end %>
