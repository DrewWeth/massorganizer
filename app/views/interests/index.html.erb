<h1>Listing Interests</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Members</th>
      <th>Organization</th>
      <th>Description</th>

    </tr>
  </thead>

  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <td><%= link_to interest.name, interest %></td>
        <td><%= interest.devices.count %></td>
        <td><%= link_to interest.organization.name, interest.organization %></td>
        <td><%= interest.desc || "No description" %></td>

        <% if current_user and current_user.admin != 0 %>
        <td><%= link_to 'Edit', edit_interest_path(interest) %></td>
        <td><%= link_to 'Destroy', interest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
