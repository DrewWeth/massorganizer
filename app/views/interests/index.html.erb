<h1>Listing interests</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Organization</th>
      <th>Desc</th>
      <th>Main email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @interests.each do |interest| %>
      <tr>
        <td><%= interest.id %></td>
        <td><%= link_to interest.name, interest %></td>
        <td><%= interest.organization.name %></td>
        <td><%= interest.desc %></td>
        <td><%= interest.main_email %></td>
        <% if current_user and current_user.admin != 0 %>
        <td><%= link_to 'Edit', edit_interest_path(interest) %></td>
        <td><%= link_to 'Destroy', interest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Interest', new_interest_path %>
